<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="config.addressing" class="com.sissi.config.impl.MongoConfig">
		<constructor-arg>
			<map>
				<entry>
					<key>
						<util:constant static-field="com.sissi.config.impl.MongoConfig.D_NAME" />
					</key>
					<value>${mongo.db}</value>
				</entry>
				<entry>
					<key>
						<util:constant static-field="com.sissi.config.impl.MongoConfig.C_NAME" />
					</key>
					<value>${mongo.collection.addressing}</value>
				</entry>
			</map>
		</constructor-arg>
	</bean>

	<alias name="addressing.mongo" alias="addressing" />
	<bean id="addressing.mongo" class="com.sissi.addressing.impl.MongoHashAddressing">
		<constructor-arg ref="mongo.client" />
		<constructor-arg ref="config.addressing" />
		<constructor-arg ref="builder.context.offline" />
	</bean>

</beans>
