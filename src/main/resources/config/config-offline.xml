<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="storageBox" class="com.sissi.offline.impl.MyStorageBox">
		<constructor-arg index="0" value="sissi" />
		<constructor-arg index="1" value="offline" />
		<constructor-arg ref="mongoClient" />
		<constructor-arg>
			<util:list>
				<bean class="com.sissi.offline.impl.MessageStorageBlock"/>
				<bean class="com.sissi.offline.impl.PresenceStorageBlock"/>
			</util:list>
		</constructor-arg>
	</bean>

</beans>
