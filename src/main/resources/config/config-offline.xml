<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="config.offline.storage" class="com.sissi.config.impl.MongoConfig">
		<constructor-arg>
			<map>
				<entry>
					<key>
						<util:constant static-field="com.sissi.config.impl.MongoConfig.D_NAME" />
					</key>
					<value>${mongo.db}</value>
				</entry>
				<entry>
					<key>
						<util:constant static-field="com.sissi.config.impl.MongoConfig.C_NAME" />
					</key>
					<value>${mongo.collection.offline.storage}</value>
				</entry>
			</map>
		</constructor-arg>
	</bean>

	<bean id="storage.message" class="com.sissi.offline.impl.MyStorageBlock4Message">
		<constructor-arg ref="builder.jid" />
	</bean>
	<bean id="storage.presence" class="com.sissi.offline.impl.MyStorageBlock4Presence">
		<constructor-arg ref="builder.jid" />
	</bean>
	<bean id="storage.box" class="com.sissi.offline.impl.MyStorageBox">
		<constructor-arg ref="config.offline.storage" />
		<constructor-arg ref="mongo.client" />
		<constructor-arg>
			<util:list>
				<ref bean="storage.message" />
				<ref bean="storage.presence" />
			</util:list>
		</constructor-arg>
	</bean>

</beans>
