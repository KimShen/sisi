<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="iqCondition" class="com.sissi.pipeline.process.ChainedFinder$Condition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.process.ClassMatcher">
				<constructor-arg value="com.sissi.protocol.iq.IQ" />
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean class="com.sissi.pipeline.process.ChainedProcessor">
				<constructor-arg>
					<util:list>
						<bean class="com.sissi.pipeline.process.iq.IQNoneChildrenProcessor">
							<constructor-arg ref="iqResultProcessor" />
						</bean>
						<bean class="com.sissi.pipeline.process.iq.IQForkProcessor">
							<constructor-arg>
								<bean class="com.sissi.pipeline.process.ChainedFinder">
									<constructor-arg>
										<util:list>
											<ref bean="bindCondition" />
											<ref bean="rosterGetCondition" />
											<ref bean="rosterSetCondition" />
											<ref bean="iqResultCondition" />
										</util:list>
									</constructor-arg>
								</bean>
							</constructor-arg>
						</bean>
					</util:list>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

	<bean id="bindCondition" class="com.sissi.pipeline.process.ChainedFinder$Condition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.process.ClassMatcher">
				<constructor-arg value="com.sissi.protocol.iq.bind.Bind" />
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean class="com.sissi.pipeline.process.ChainedProcessor">
				<constructor-arg>
					<util:list>
						<bean class="com.sissi.pipeline.process.iq.bind.BindProcessor">
							<constructor-arg ref="systemJID" />
							<constructor-arg ref="addressing" />
						</bean>
						<ref bean="presenceFriendsProcessor" />
						<bean class="com.sissi.pipeline.process.presence.state.PresenceMyselfProcessor">
							<constructor-arg ref="jidBuilder" />
							<constructor-arg ref="addressing" />
							<constructor-arg ref="p2pRelationContext" />
						</bean>
					</util:list>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

	<bean id="rosterGetCondition" class="com.sissi.pipeline.process.ChainedFinder$Condition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.process.iq.roster.RosterTypeMatcher">
				<constructor-arg value="GET" />
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean class="com.sissi.pipeline.process.iq.roster.RosterGetProcessor">
				<constructor-arg ref="p2pRelationContext" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="rosterSetCondition" class="com.sissi.pipeline.process.ChainedFinder$Condition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.process.iq.roster.RosterTypeMatcher">
				<constructor-arg value="SET" />
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean class="com.sissi.pipeline.process.ChainedProcessor">
				<constructor-arg>
					<util:list>
						<bean class="com.sissi.pipeline.process.iq.roster.RosterSetProcessor">
							<constructor-arg ref="p2pRelationContext" />
						</bean>
						<ref bean="iqResultProcessor" />
					</util:list>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

	<bean id="iqResultProcessor" class="com.sissi.pipeline.process.iq.result.IQResultProcessor" />

	<bean id="iqResultCondition" class="com.sissi.pipeline.process.ChainedFinder$Condition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.process.AllMatcher" />
		</constructor-arg>
		<constructor-arg ref="iqResultProcessor" />
	</bean>
</beans>
