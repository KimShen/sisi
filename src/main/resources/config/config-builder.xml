<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<alias name="builder.user" alias="builder.jid" />
	<bean id="builder.user" class="com.sissi.context.impl.UserBuilder">
		<constructor-arg value="${global.host}" />
	</bean>

	<bean id="builder.context.online" class="com.sissi.context.impl.UserContextBuilder" />
	<bean id="builder.context.offline" class="com.sissi.context.impl.OfflineContextBuilder" />

</beans>
