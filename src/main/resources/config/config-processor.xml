<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util" xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="matchAllProcessor" class="com.sissi.process.finder.MatchProcessor">
		<constructor-arg>
			<bean class="com.sissi.process.Matcher$AllMatcher" />
		</constructor-arg>
		<constructor-arg>
			<bean class="com.sissi.process.Processor$NothingProcessor" />
		</constructor-arg>
	</bean>

	<bean id="chainedProcessorFinder" class="com.sissi.process.finder.ChainedProcessorFinder">
		<constructor-arg>
			<bean class="org.springframework.beans.factory.config.ListFactoryBean" scope="prototype">
				<property name="targetListClass" value="java.util.ArrayList" />
				<property name="singleton" value="true" />
				<property name="sourceList">
					<list>
						<ref bean="authMatchProcessor" />
						<ref bean="iqMatchProcessor" />
						<ref bean="messageMatchProcessor" />
						<ref bean="presenceMatchProcessor" />
						<ref bean="streamMatchProcessor" />
						<ref bean="matchAllProcessor" />
					</list>
				</property>
			</bean>
		</constructor-arg>
	</bean>

</beans>
