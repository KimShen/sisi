<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util" xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="allMatcherCondition" class="com.sissi.pipeline.process.ChainedFinder$Condition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.process.AllMatcher" />
		</constructor-arg>
		<constructor-arg>
			<bean class="com.sissi.pipeline.process.NothingProcessor" />
		</constructor-arg>
	</bean>

	<bean id="processorFinder" class="com.sissi.pipeline.process.ChainedFinder">
		<constructor-arg>
			<bean class="org.springframework.beans.factory.config.ListFactoryBean" scope="prototype">
				<property name="targetListClass" value="java.util.ArrayList" />
				<property name="singleton" value="true" />
				<property name="sourceList">
					<list>
						<ref bean="authCondition" />
						<ref bean="iqCondition" />
						<ref bean="messageForkCondition" />
						<ref bean="presenceForkCondition" />
						<ref bean="streamCondition" />
						<ref bean="allMatcherCondition" />
					</list>
				</property>
			</bean>
		</constructor-arg>
	</bean>

</beans>
