<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<alias name="auth.sasl.cached" alias="auth.sasl" />
	<bean id="auth.sasl.cached" class="com.sissi.pipeline.in.auth.impl.CachedSaslServers" />

	<bean id="auth.call.plain" class="com.sissi.pipeline.in.auth.impl.PlainAuthCallback">
		<constructor-arg ref="builder.jid" />
		<constructor-arg ref="ucenter.accessor" />
	</bean>
	<bean id="auth.call.digest" class="com.sissi.pipeline.in.auth.impl.DigestAuthCallback">
		<constructor-arg value="${global.host}" />
		<constructor-arg ref="auth.sasl" />
		<constructor-arg ref="builder.jid" />
		<constructor-arg ref="ucenter.accessor" />
	</bean>
	<util:list id="auth.call.chained">
		<ref bean="auth.call.plain" />
		<ref bean="auth.call.digest" />
	</util:list>

	<bean id="auth.pro.failed" class="com.sissi.pipeline.in.auth.impl.AuthFailedProcessor" />
	<bean id="auth.pro.fork" class="com.sissi.pipeline.in.auth.impl.AuthForkProcessor" parent="global.pro.proxy">
		<constructor-arg ref="auth.call.chained" />
	</bean>
	<bean id="auth.pro.chained" class="com.sissi.pipeline.in.ChainedProcessor">
		<constructor-arg>
			<util:list>
				<ref bean="auth.pro.fork" />
				<ref bean="auth.pro.failed" />
			</util:list>
		</constructor-arg>
	</bean>
	<bean id="auth.pro.digest" class="com.sissi.pipeline.in.auth.impl.AuthDigestProcessor" parent="global.pro.proxy">
		<constructor-arg ref="auth.sasl" />
	</bean>
	<bean id="auth.pro.digest.chained" class="com.sissi.pipeline.in.ChainedProcessor">
		<constructor-arg>
			<util:list>
				<ref bean="auth.pro.digest" />
				<ref bean="auth.pro.failed" />
			</util:list>
		</constructor-arg>
	</bean>

	<bean id="auth.condition" class="com.sissi.pipeline.in.PairCondition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.in.ClassMatcher">
				<constructor-arg value="com.sissi.protocol.iq.auth.Auth" />
			</bean>
		</constructor-arg>
		<constructor-arg ref="auth.pro.chained" />
	</bean>
	<bean id="auth.condition.digest" class="com.sissi.pipeline.in.PairCondition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.in.ClassMatcher">
				<constructor-arg value="com.sissi.protocol.iq.auth.Response" />
			</bean>
		</constructor-arg>
		<constructor-arg ref="auth.pro.digest.chained" />
	</bean>
</beans>
