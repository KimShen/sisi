<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="message.pro.validate" class="com.sissi.pipeline.in.message.MessageValidateProcessor" parent="global.pro.proxy" />
	<bean id="message.pro" class="com.sissi.pipeline.in.message.MessageProcessor" parent="global.pro.proxy" />
	<bean id="message.pro.chained" class="com.sissi.pipeline.in.ChainedProcessor">
		<constructor-arg>
			<util:list>
				<ref bean="message.pro.validate" />
				<ref bean="message.pro" />
			</util:list>
		</constructor-arg>
	</bean>

	<bean id="message.condition" class="com.sissi.pipeline.in.PairCondition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.in.ClassMatcher">
				<constructor-arg value="com.sissi.protocol.message.Message" />
			</bean>
		</constructor-arg>
		<constructor-arg ref="message.pro.chained" />
	</bean>
</beans>
