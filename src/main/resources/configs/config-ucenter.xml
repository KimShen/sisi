<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="config.auth" class="com.sissi.config.impl.MongoCollection">
		<constructor-arg ref="mongo.client" />
		<constructor-arg index="1" value="${mongo.db}" />
		<constructor-arg index="2" value="${mongo.collection.auth}" />
	</bean>

	<bean id="config.ucenter.relation.roster" class="com.sissi.config.impl.MongoCollection">
		<constructor-arg ref="mongo.client" />
		<constructor-arg index="1" value="${mongo.db}" />
		<constructor-arg index="2" value="${mongo.collection.roster}" />
	</bean>

	<bean id="ucenter.ban" class="com.sissi.ucenter.impl.MongoBanContext">
		<constructor-arg ref="config.auth" />
	</bean>

	<alias name="ucenter.accessor.mongo" alias="ucenter.accessor" />
	<bean id="ucenter.accessor.mongo" class="com.sissi.ucenter.impl.MongoAuthAccessor">
		<constructor-arg ref="config.auth" />
	</bean>

	<bean id="ucenter.relation.roster" class="com.sissi.ucenter.impl.MongoRelationContext">
		<constructor-arg ref="builder.jid" />
		<constructor-arg ref="config.ucenter.relation.roster" />
	</bean>

	<bean id="ucenter.register" class="com.sissi.ucenter.impl.MongoRegisterContext">
		<constructor-arg ref="config.auth" />
	</bean>

	<bean id="ucenter.invitation.simple" class="com.sissi.ucenter.impl.SimpleFormInvitation" />
	<bean id="ucenter.invitation.multi" class="com.sissi.ucenter.impl.MultiFormInvitation">
		<constructor-arg value="${register.invitation.title}" />
		<constructor-arg value="${register.invitation.instructions}" />
		<constructor-arg ref="uncenter.fields.builder" />
	</bean>

	<!-- For test -->
	<bean id="uncenter.fields.builder" class="com.sissi.ucenter.impl.ConfigRegisterFieldsBuilder">
		<constructor-arg>
			<util:list>
				<bean class="com.sissi.protocol.iq.register.form.Input">
					<constructor-arg value="HIDDEN" />
					<constructor-arg value="from" />
					<constructor-arg>
						<null />
					</constructor-arg>
					<constructor-arg value="mobile" />
				</bean>
				<bean class="com.sissi.protocol.iq.register.form.Input">
					<constructor-arg value="TEXT_SINGLE" />
					<constructor-arg value="username" />
					<constructor-arg value="username" />
					<constructor-arg>
						<util:constant static-field="com.sissi.protocol.iq.register.form.Required.FIELD" />
					</constructor-arg>
				</bean>
				<bean class="com.sissi.protocol.iq.register.form.Input">
					<constructor-arg value="TEXT_SINGLE" />
					<constructor-arg value="password" />
					<constructor-arg value="password" />
					<constructor-arg>
						<util:constant static-field="com.sissi.protocol.iq.register.form.Required.FIELD" />
					</constructor-arg>
				</bean>
				<bean class="com.sissi.protocol.iq.register.form.Select">
					<constructor-arg value="gender" />
					<constructor-arg value="gender" />
					<constructor-arg>
						<util:constant static-field="com.sissi.protocol.iq.register.form.Required.FIELD" />
					</constructor-arg>
					<constructor-arg>
						<util:list>
							<bean class="com.sissi.protocol.iq.register.form.Option">
								<constructor-arg index="0" value="Male" />
								<constructor-arg index="1" value="M" />
							</bean>
							<bean class="com.sissi.protocol.iq.register.form.Option">
								<constructor-arg index="0" value="Female" />
								<constructor-arg index="1" value="F" />
							</bean>
						</util:list>
					</constructor-arg>
				</bean>
			</util:list>
		</constructor-arg>
	</bean>

</beans>
