<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="config.status" class="com.sissi.config.impl.MongoCollection">
		<constructor-arg ref="mongo.client" />
		<constructor-arg index="1" value="${mongo.db}" />
		<constructor-arg index="2" value="${mongo.collection.presence}" />
	</bean>

	<bean id="builder.jid" class="com.sissi.context.impl.DomainJIDBuilder">
		<constructor-arg value="${global.main.domain}" />
	</bean>
	<bean id="builder.context.online" class="com.sissi.context.impl.OnlineContextBuilder">
		<constructor-arg ref="builder.status" />
		<constructor-arg ref="server.heart"/>
		<constructor-arg index="0" value="${auth.retry}" />
		<constructor-arg index="1" value="${global.lang}" />
		<constructor-arg index="2" value="${global.main.domain}" />
	</bean>
	<bean id="builder.context.offline" class="com.sissi.context.impl.OfflineContextBuilder">
		<constructor-arg ref="storage.box" />
		<constructor-arg value="${global.lang}" />
		<constructor-arg value="${global.main.domain}" />
	</bean>
	
	<bean id="builder.status" class="com.sissi.context.impl.MongoStatusBuilder">
		<constructor-arg ref="config.status" />
	</bean>

</beans>
