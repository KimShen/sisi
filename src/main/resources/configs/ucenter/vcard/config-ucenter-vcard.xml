<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="ucenter.vcard.user" class="com.sissi.ucenter.vcard.user.MongoVCardContext">
		<constructor-arg ref="context.jid" />
		<constructor-arg ref="ucenter.config" />
		<constructor-arg>
			<util:list>
				<ref bean="ucenter.vcard.user.parse.photo" />
				<ref bean="ucenter.vcard.user.parse.nickname" />
			</util:list>
		</constructor-arg>
	</bean>

	<bean id="ucenter.vcard.user.parse.photo" class="com.sissi.ucenter.vcard.parser.PhotoFieldParser" />
	<bean id="ucenter.vcard.user.parse.nickname" class="com.sissi.ucenter.vcard.parser.NicknameFieldParser" />
</beans>
