<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="bytestreams.proxy" class="com.sissi.pipeline.in.iq.bytestreams.BytestreamsProxy">
		<constructor-arg index="0" value="${bytestreams.proxy.user}" />
		<constructor-arg index="1" value="${bytestreams.proxy.name}" />
		<constructor-arg index="2" value="${bytestreams.proxy.host}" />
		<constructor-arg index="3" value="${bytestreams.proxy.port}" />
	</bean>

	<bean id="bytestreams.pro.used" class="com.sissi.pipeline.in.iq.bytestreams.BytestreamsUsedProcessor" parent="global.pro.proxy" />
	<bean id="bytestreams.pro.search" class="com.sissi.pipeline.in.iq.bytestreams.BytestreamsSearchProcessor">
		<constructor-arg ref="bytestreams.proxy" />
	</bean>
	<bean id="bytestreams.pro.forward" class="com.sissi.pipeline.in.iq.bytestreams.BytestreamsForwardProcessor" parent="global.pro.proxy" />
	<bean id="bytestreams.pro.fork" class="com.sissi.pipeline.in.ForkProcessor">
		<constructor-arg ref="finder.iq.bytestreams" />
	</bean>

	<bean id="finder.iq.bytestreams" class="com.sissi.pipeline.in.ChainedFinder">
		<constructor-arg>
			<util:list>
				<ref bean="bytestreams.condition.used" />
				<ref bean="bytestreams.condition.search" />
				<ref bean="bytestreams.condition.forward" />
				<ref bean="iq.condition.matchall" />
			</util:list>
		</constructor-arg>
	</bean>

	<bean id="bytestreams.pro.condition" class="com.sissi.pipeline.in.PairCondition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.in.ClassMatcher">
				<constructor-arg value="com.sissi.protocol.iq.bytestreams.Bytestreams" />
			</bean>
		</constructor-arg>
		<constructor-arg ref="bytestreams.pro.fork" />
	</bean>
	<bean id="bytestreams.condition.search" class="com.sissi.pipeline.in.PairCondition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.in.iq.bytestreams.BytestreamsSearchMatcher">
				<constructor-arg ref="bytestreams.proxy" />
			</bean>
		</constructor-arg>
		<constructor-arg ref="bytestreams.pro.search" />
	</bean>
	<bean id="bytestreams.condition.forward" class="com.sissi.pipeline.in.PairCondition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.in.ClassMatcher">
				<constructor-arg value="com.sissi.protocol.iq.bytestreams.Bytestreams" />
			</bean>
		</constructor-arg>
		<constructor-arg ref="bytestreams.pro.forward" />
	</bean>
	<bean id="bytestreams.condition.used" class="com.sissi.pipeline.in.PairCondition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.in.iq.bytestreams.BytestreamsUsedMatcher" />
		</constructor-arg>
		<constructor-arg ref="bytestreams.pro.used" />
	</bean>
</beans>
