<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<alias name="relation.muc.mongo" alias="relation.muc" />
	<bean id="relation.muc.mongo" class="com.sissi.ucenter.relation.muc.MongoRelationMucContext">
		<constructor-arg ref="jid" />
		<constructor-arg>
			<bean class="com.sissi.config.impl.MongoProxyConfig">
				<constructor-arg ref="mongo" />
				<constructor-arg index="1" value="${mongo.db}" />
				<constructor-arg index="2" value="${mongo.collection.muc}" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="relation.muc.context" class="com.sissi.ucenter.relation.muc.MongoMucGroupContext">
		<constructor-arg ref="relation.muc" />
		<constructor-arg>
			<bean class="com.sissi.config.impl.MongoProxyConfig">
				<constructor-arg ref="mongo" />
				<constructor-arg index="1" value="${mongo.db}" />
				<constructor-arg index="2" value="${mongo.collection.muc}" />
			</bean>
		</constructor-arg>
	</bean>
	
</beans>
