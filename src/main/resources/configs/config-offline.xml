<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="config.storage.box" class="com.sissi.config.impl.MongoCollection">
		<constructor-arg ref="mongo.client" />
		<constructor-arg index="1" value="${mongo.db}" />
		<constructor-arg index="2" value="${mongo.collection.offline}" />
	</bean>

	<bean id="storage.message" class="com.sissi.offline.impl.DelayMessage">
		<constructor-arg ref="builder.jid" />
		<constructor-arg value="${offline.title}" />
	</bean>
	<bean id="storage.presence" class="com.sissi.offline.impl.DelayPresence">
		<constructor-arg ref="builder.jid" />
		<constructor-arg value="${offline.title}" />
	</bean>
	
	<bean id="storage.box" class="com.sissi.offline.impl.MongoDelayElementBox">
		<constructor-arg ref="config.storage.box" />
		<constructor-arg>
			<util:list>
				<ref bean="storage.message" />
				<ref bean="storage.presence" />
			</util:list>
		</constructor-arg>
	</bean>

</beans>
