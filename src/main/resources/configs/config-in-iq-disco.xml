<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="disco.pro.info" class="com.sissi.pipeline.in.iq.disco.DiscoInfoProcessor" />
	<bean id="disco.pro.info.chained" class="com.sissi.pipeline.in.ChainedProcessor">
		<constructor-arg>
			<util:list>
				<ref bean="disco.pro.info" />
			</util:list>
		</constructor-arg>
	</bean>

	<bean id="disco.pro.items" class="com.sissi.pipeline.in.iq.disco.DiscoItemsProcessor" />
	<bean id="disco.pro.items.chained" class="com.sissi.pipeline.in.ChainedProcessor">
		<constructor-arg>
			<util:list>
				<ref bean="disco.pro.items" />
			</util:list>
		</constructor-arg>
	</bean>

	<bean id="disco.info.condition" class="com.sissi.pipeline.in.PairCondition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.in.ClassMatcher">
				<constructor-arg value="com.sissi.protocol.iq.disco.Info" />
			</bean>
		</constructor-arg>
		<constructor-arg ref="disco.pro.info.chained" />
	</bean>

	<bean id="disco.items.condition" class="com.sissi.pipeline.in.PairCondition">
		<constructor-arg>
			<bean class="com.sissi.pipeline.in.ClassMatcher">
				<constructor-arg value="com.sissi.protocol.iq.disco.Items" />
			</bean>
		</constructor-arg>
		<constructor-arg ref="disco.pro.items.chained" />
	</bean>

</beans>
